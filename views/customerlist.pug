mixin buttons(id)
    a(href="#" id='deleteCustomer-' + id title='Slett kunde')
        img(src="images/add-deleteperson.png")
    a(href="#" id='editCustomer-' + id title='Rediger kunde')
        img(src="images/settings.png")
    a(href="#" id='invoices-' + id title='Vis kundefakturaer')
        img(src="images/pricetags.png")

table.table
    thead
        tr
            th(scope='col') #
            th(scope='col') Firma
            th(scope='col') Fornavn
            th(scope='col') Etternavn
            th(scope='col') Epost
            th(scope='col') Utest√•ende
            th(scope='col') Funksjoner
    tbody
    each customer in customers
        tr
            th(scope='row')= customer.id
            td= customer.companyName
            td= customer.firstName
            td= customer.lastName
            td= customer.email
            td= customer.debt
            td
                +buttons(customer.id)
